

@{
    ViewData["Title"] = "Edit Movie";
}
@model Film
<h2>Edit Movie</h2>

<form method="post">
    
    <div class="form-group">
        <label asp-for="Title">Title *</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Enter film title"/>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category *</label>
        <select class="form-control" asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category x in ViewBag.Categories)
            {
                <option value="@x.CategoryId">@x.CategoryName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating *</label>
        <select class="form-control" asp-for="Rating">
            <option value="">Select a Rating</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>
    <label>Edited</label>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Edited" id="edit1" value="true"/>
        <label class="form-check-label" for="edit1">Yes</label>
    </div>
    <div class="form-check mb-2">
        <input class="form-check-input" type="radio" asp-for="Edited" id="edit2" value="false"/>
        <label class="form-check-label" for="edit2">No</label>
    </div>
    <div class="form-group">
        <label asp-for="LentTo">Lent To</label>
        <input type="text" class="form-control" asp-for="LentTo" placeholder="Enter borrower"/>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea class="form-control" asp-for="Notes" rows="2" placeholder="Enter notes"></textarea>
    </div>
    <input type="hidden" asp-for="FilmId"/>
    <div class="form-group">
        <p>* indicates a required field.</p>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-film"></i> Save Movie
        </button>
    </div>
    <div class="form-group">
        <div id="validationSummary" asp-validation-summary="All"></div>
    </div>
</form>